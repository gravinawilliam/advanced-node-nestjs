{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true,
    "incremental": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "paths": {
      "@application/*": [
        "./src/application/*"
      ],
      "@dtos/*": [
        "./src/domain/dtos/*"
      ],
      "@models/*": [
        "./src/domain/models/*"
      ],
      "@domain/*": [
        "./src/domain/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@fakes/*": [
        "./src/fakes/*"
      ],
      "@infra/*": [
        "./src/infra/*"
      ],
      "@main/*": [
        "./src/main/*"
      ]
    }
  }
}
